{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "webp-converter",
  "version": "1.0.1",
  "identifier": "com.victorrodriguez.webp-converter",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "webp-converter",
        "width": 800,
        "height": 600,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/cwebp"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
